<div id="welcome">
  <div class="container">
    <h1>List Routes</h1>
    <hr/>
    <div class="buttons">
      <!--<a class="btn btn-info" href="/account/profile">Update my email</a>-->
      <button class="btn btn-outline-info ml-2" @click="clickOpenDashboardModalButton()">New Route</button>
    </div>
  </div>
  <div class="container">
  	<div style="text-align: center;margin-top: 20px;" class="col-md-12">
		<table id="Maletines" class="table table-striped table-bordered" style="width:100%">
	        <thead>
	            <tr>
	                <th>Name</th>
                  <th>Origin</th>
                  <th>Destination</th>
                  <th>Options</th>
	            </tr>
	        </thead>
	        <tbody>
	        	<% _.each(Routes, function (Route) { %>
	    		<tr>
	                <td><%= Route.name %></td>
                  <td><%= Route.origin %></td>
                  <td><%= Route.destination %></td>
                  <th>
                     <a href="/api/Route/delete/<%= Route.id %>" class="btn btn-outline-danger ml-2" @click="">Delete</a>
                    <a href="/api/Route/<%= Route.id %>" class="btn btn-outline-primary ml-2" @click="">Update</a>
                  </th>
	            </tr>
	  			<% }) %>
	            
	        </tbody>
    	</table>
	</div>
  </div>
  <modal class="example-modal" v-if="dashboardModalVisible" @close="closeDashboardModal()" v-cloak>
    <div class="modal-header">
      <h2 class="modal-title">New Route</h2>
       <hr/>
      <button type="button" class="modal-close-button" data-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <h5 class="section-heading">Form Route</h5>
      <form method="POST" action="/api/Route/create">
	      <div class="modal-body mx-3">
	            <div class="md-form mb-5">
	               <label data-error="wrong" data-success="right" for="defaultForm-email">Name</label>
	                  <i class="fa fa-line-chart prefix grey-text"></i>
	                <input type="text" id="name" name="name" class="form-control validate" placeholder="@name" required="true">  
	            </div>
              <div class="md-form mb-5">
                 <label data-error="wrong" data-success="right" for="defaultForm-email">Origin</label>
                    <i class="fa fa-map-marker prefix grey-text"></i>
                  <input type="text" id="origin" name="origin" class="form-control validate" placeholder="@Origin" required="true">  
              </div>
              <div class="md-form mb-5">
                 <label data-error="wrong" data-success="right" for="defaultForm-email">Destination</label>
                    <i class="fa fa-map-marker prefix grey-text"></i>
                  <input type="text" id="destination" name="destination" class="form-control validate" placeholder="@Destination" required="true">  
              </div>


	      </div>
          <div class="d-flex justify-content-center">
              <button type="input" class="btn btn-info" value="Create"> Save</button>
          </div>
      </form>
    </div>
    <div class="modal-footer flex-row-reverse justify-content-between">
      <button type="button" data-dismiss="modal" class="btn btn-outline-info">Close</button>
    </div>
  </modal>


</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>