<div id="welcome">
  <div class="container">
    <h1>List Clients</h1>
    <hr/>
    <div class="buttons">
      <!--<a class="btn btn-info" href="/account/profile">Update my email</a>-->
      <button class="btn btn-outline-info ml-2" @click="clickOpenDashboardModalButton()">New Client</button>
    </div>
  </div>
  <div class="container">
  	<div style="text-align: center;margin-top: 20px;" class="col-md-12">
		<table id="Maletines" class="table table-striped table-bordered" style="width:100%">
	        <thead>
	            <tr>
	                <th>Name</th>
                  <th>LastName</th>
                  <th>Phone Number</th>
                  <th>E-mail</th>
                  <th>Options</th>
	            </tr>
	        </thead>
	        <tbody>
	        	<% _.each(Clients, function (Client) { %>
	    		<tr>
	                <td><%= Client.name %></td>
                  <td><%= Client.lastName %></td>
                  <td><%= Client.phoneNumber %></td>
                  <td><%= Client.email %></td>
                  <th>
                     <a href="/api/Client/delete/<%= Client.id %>" class="btn btn-outline-danger ml-2" @click="">Delete</a>
                    <a href="/api/Client/<%= Client.id %>" class="btn btn-outline-primary ml-2" @click="">Update</a>
                  </th>
	            </tr>
	  			<% }) %>
	            
	        </tbody>
    	</table>
	</div>
  </div>
  <modal class="example-modal" v-if="dashboardModalVisible" @close="closeDashboardModal()" v-cloak>
    <div class="modal-header">
      <h2 class="modal-title">New Client</h2>
       <hr/>
      <button type="button" class="modal-close-button" data-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <h5 class="section-heading">Form Client</h5>
      <form method="POST" action="/api/Client/create">
	      <div class="modal-body mx-3">
	            <div class="md-form mb-5">
	               <label data-error="wrong" data-success="right" for="defaultForm-email">Name</label>
	                  <i class="fa fa-address-card-o prefix grey-text"></i>
	                <input type="text" id="name" name="name" class="form-control validate" placeholder="@name" required="true">  
	            </div>
              <div class="md-form mb-5">
                 <label data-error="wrong" data-success="right" for="defaultForm-email">Last Name</label>
                    <i class="fa fa-address-card prefix grey-text"></i>
                  <input type="text" id="lastName" name="lastName" class="form-control validate" placeholder="@lastName" required="true">  
              </div>
              <div class="md-form mb-5">
                 <label data-error="wrong" data-success="right" for="defaultForm-email">Phone Number</label>
                    <i class="fa fa-phone prefix grey-text"></i>
                  <input type="text" id="phoneNumber" name="phoneNumber" class="form-control validate" placeholder="@111-222-3333" required="true">  
              </div>
              <div class="md-form mb-5">
                 <label data-error="wrong" data-success="right" for="defaultForm-email">E-mail</label>
                    <i class="fa fa-envelope prefix grey-text"></i>
                  <input type="email" id="email" name="email" class="form-control validate" placeholder="example@hotmail.com" required="true">  
              </div>


	      </div>
          <div class="d-flex justify-content-center">
              <button type="input" class="btn btn-info" value="Create"> Save</button>
          </div>
      </form>
    </div>
    <div class="modal-footer flex-row-reverse justify-content-between">
      <button type="button" data-dismiss="modal" class="btn btn-outline-info">Close</button>
    </div>
  </modal>


</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>